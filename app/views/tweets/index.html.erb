
<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    
      <%= render 'tweet_form' %>

    
      <div class="tweets-list">
        <!-- ツイート表示 -->
        <% @tweets.each do |tweet| %>
          <div class="row">
              <p>稲本 <span><%= tweet.created_at %></span></p>
              <h4><strong><%= tweet.content %></strong></h4>
              <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
              <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-default btn-sm btn btn-danger'%>
          </div>
        <% end %>
      </div>
    
    
    </div>
</div>