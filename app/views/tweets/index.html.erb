
<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        
    <!-- ツイートフォーム -->
    <%= form_for(@tweet) do |f| %>
      <%= f.text_area :content %>
      <br>
      <%= f.submit "ツイート" %>
    <% end %>
    
    <!-- ツイート表示 -->
    <% @tweets.each do |tweet| %>
      <div class="row">
          <p>稲本 <span><%= tweet.created_at %></span></p>
          <h4><strong><%= tweet.content %></strong></h4>
      </div>
    <% end %>
    
    
    </div>
</div>